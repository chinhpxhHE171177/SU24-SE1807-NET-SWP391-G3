<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddData"
    android:background="#DBDBBB">

    <!-- Title include -->
    <include
        android:id="@+id/title"
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ImageView with Camera Icon -->
    <ImageView
        android:id="@+id/img_photo_add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_image_camera"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EditText for Id Code -->
    <EditText
        android:id="@+id/edt_IdCode_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Id"
        android:inputType="text"
        android:background="@drawable/background_pressed"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/img_photo_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- EditText for Code -->
    <EditText
        android:id="@+id/edt_Code_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Code"
        android:inputType="text"
        android:background="@drawable/background_pressed"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_IdCode_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- EditText for Name -->
    <EditText
        android:id="@+id/edt_Name_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="text"
        android:background="@drawable/background_pressed"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_Code_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- EditText for Stage -->
    <EditText
        android:id="@+id/edt_Stage_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Stage"
        android:inputType="text"
        android:background="@drawable/background_pressed"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_Name_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- EditText for Issue -->
    <EditText
        android:id="@+id/edt_Issue_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Issue"
        android:inputType="text"
        android:background="@drawable/background_pressed"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_Stage_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Add Button -->
    <Button
        android:id="@+id/btn_Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/edt_Issue_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
